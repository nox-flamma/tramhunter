<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent"
	android:layout_height="wrap_content"
	android:orientation="vertical"
	android:padding="5dip">

			<TextView android:id="@+id/stopNameTextView"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_toLeftOf="@+id/starImageView"
				android:layout_alignParentLeft="true"
				android:textSize="18dip"
				android:singleLine="true"
				android:ellipsize="end"/>	
				
			<ImageView android:id="@+id/starImageView"
				android:layout_width="23dip"
				android:layout_height="23dip"
				android:layout_alignParentRight="true"
				android:src="@drawable/btn_star_big_buttonless_on" 
				android:visibility="invisible" />

			<TextView android:id="@+id/stopDetailsTextView"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_below="@+id/stopNameTextView"
				android:singleLine="true"
				android:ellipsize="end"
				android:textSize="12dip"
				android:textColor="@drawable/gray"/>

			<TextView
			   	android:id="@+id/stopRoutesTextView"
			    android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:layout_below="@+id/stopDetailsTextView"
				android:textSize="12dip"
				android:singleLine="true"
				android:ellipsize="marquee"
				android:textColor="@drawable/gray"
				android:text="Routes" />	

</RelativeLayout>